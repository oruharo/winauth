# Server Configuration
server.port=8082

# Active Directory Configuration
ad.domain={{ primary_realm }}
ad.url=ldap://{{ dc1_ip }}:389
ad.searchBase=DC=DOMAIN1,DC=LAB
ad.userDn=CN=Administrator,CN=Users,DC=DOMAIN1,DC=LAB
ad.password={{ admin_password }}

# Cross-origin configuration (nginx proxy setup)
cors.allowed-origins=http://{{ ansible_host }},http://{{ app_hostname }}

# Management endpoints
management.endpoints.web.exposure.include=health,info

# Logging
logging.level.com.example.adauth=DEBUG
logging.level.org.springframework.security=DEBUG