<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- コンソールアペンダー（強制出力） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- STDOUTアペンダー -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- STDERRアペンダー -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- Kerberosプロファイル用の詳細ログ設定 -->
    <springProfile name="kerberos">
        <!-- 最優先デバッグログ -->
        <logger name="com.example.adauth" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="STDOUT" />
        </logger>
        
        <!-- Spring Security関連 -->
        <logger name="org.springframework.security" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE" />
        </logger>
        
        <!-- Kerberos関連 -->
        <logger name="org.springframework.security.kerberos" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE" />
        </logger>
        
        <!-- LDAP関連 -->
        <logger name="org.springframework.security.ldap" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE" />
        </logger>
    </springProfile>

    <!-- ルートロガー -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>